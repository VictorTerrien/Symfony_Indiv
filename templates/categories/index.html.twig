{% extends 'base.html.twig' %}

{% block title %}Gestion des chatons avec BDD{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gestion des chatons</h1>
        <table class="table table-striped">
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for c in categories %}
                <tr>
                    <td>{{ c.titre }}</td>
                    <td>{{ c.description }}</td>
                    <td><a href="{{ path('app_chatons_voir', {"id":c.id}) }}" class="btn btn-primary">Voir</a></td>
                    <td><a href="{{ path('app_categories_modifier', {"id":c.id}) }}" class="btn btn-secondary">Modifier</a></td>
                    <td><a href="{{ path('app_categories_supprimer', {"id":c.id}) }}" class="btn btn-danger">Supprimer</a></td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{ path('app_categories_ajouter') }}" class="btn btn-success">Ajouter une catégorie</a>
        <a href="{{ path('app_proprietaires') }}" class="btn btn-success">Voir les propriétaires</a>
    </div>
{% endblock %}