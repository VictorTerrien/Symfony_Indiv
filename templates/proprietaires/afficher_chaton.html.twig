{% extends 'base.html.twig' %}

{% block title %}Les chatons de {{ proprietaire.nom }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Chatons de {{ proprietaire.nom }}</h1>
        <div class="row">
            <div class="col col-3">
                {% for c in chatons %}
                    <div class="card" style="margin-bottom: 15px">
                        <img src="{{ c.photo }}" alt="{{ c.nom }}" width="300px" height="auto" class="card-img-top">
                        <div class="card-body">
                            <h4 class="title-2">{{ c.nom }}</h4>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}